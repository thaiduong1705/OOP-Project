@model List<Kinang>
@{
    ViewData["title"] = "Danh sách kĩ năng";
}

@if(TempData["success"] != null) {
    <div asp-validation-summary="All"></div>
}
<div class="container-fluid">
    <div class="row">
        <div class="col text-start p-0">
            <h2 class="text-primary">Danh sách kĩ năng</h2>

        </div>

        <div class="col text-end p-0">
            <a type="button" class="btn btn-primary" asp-controller="Skill" asp-action="Create">Tạo kĩ năng</a>
        </div>
    </div>
</div>


<table class="table table-bordered table-striped w-100">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tên kĩ năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td width="20%">@p.MaKiNang</td>
                <td width="80%">@p.TenKiNang</td>
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("_CreateSkillModal", new Kinang())

