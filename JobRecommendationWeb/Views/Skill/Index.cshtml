@model List<Kinang>
@{
    ViewData["title"] = "Danh sách kĩ năng";
}

<div id="placeholderElement"></div>

<div class="container-fluid">
    <div class="row">
        <div class="col text-start p-0">
            <h2 class="text-primary">Danh sách kĩ năng</h2>

        </div>

        <div class="col text-end p-0">
            <button class="btn btn-primary createmodal" data-bs-toggle="modal" data-bs-target="#createModal" data-url="@Url.Action("Create")">Tạo kĩ năng</button>
        </div>
    </div>
</div>


<table class="table table-bordered table-striped w-100">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tên kĩ năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td width="20%">@p.MaKiNang</td>
                <td width="80%">@p.TenKiNang</td>
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("CreateSkillPartialView", new Kinang())

