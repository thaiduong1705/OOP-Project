@model JobRecommendationWeb.CustomViewModel.AddPostViewModel

@{
    ViewData["Title"] = "Tạo bài tuyển dụng";
}

@section Styles {
    <link rel="stylesheet" href="~/css/MultiSelectStyle.css" />
}

<div class="container">
    <form method="post" autocomplete="off">
        <div class="mb-3">
            <label class="form-label">Tên công ty</label>
            <input type="text" class="form-control" style="background-color: #eee" asp-for="baidang.TenCongViec"/>
        </div>

        <div class="mb-3">
            <label class="form-label">Tên công việc</label>
            <input type="text" class="form-control" style="background-color: #eee" />
        </div>

        <div class="mb-3">
            <label class="form-label">Tên công việc</label>
            <input type="text" class="form-control" style="background-color: #eee" />
        </div>

        <div class="mb-3">
            <div class="row">
                <div class="col">
                    <label class="form-label">Lương</label>
                    <div class="d-flex justify-content-between">
                        <div class="d-flex justify-content-between">
                            <label class="form-label my-2 me-2">Từ</label>
                            <input type="text" class="form-control py-2" style="background-color: #eee" />
                        </div>
                        <div class="px-4"></div>
                        <div class="d-flex justify-content-between">
                            <label class="form-label my-2 me-2">Đến</label>
                            <input type="text" class="form-control" style="background-color: #eee" />
                        </div>
                    </div>
                </div>
                <div class="col">
                    <label class="form-label ">Năm kinh nghiệm</label>
                    <input type="text" class="form-control py-2" style="background-color: #eee" />
                </div>
                <div class="col">
                    <label class="form-label ">Cấp bậc</label>
                    <input type="text" class="form-control py-2" style="background-color: #eee" />
                </div>
            </div>
        </div>

        <div class="mb-3">
            <div class="row">
                <div class="col">
                    <label class="form-label ">Địa chỉ</label>
                    <input type="text" class="form-control py-2" style="background-color: #eee" />
                </div>
                <div class="col">
                    <label class="form-label ">Link bài gốc</label>
                    <input type="text" class="form-control py-2" style="background-color: #eee" />
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Kĩ năng</label>
            <select class="chosen-default form-select" multiple>
                @foreach (var item in Model.listKiNang)
                {
                    <option value="@item.MaKiNang">@item.TenKiNang</option>
                }
            </select>
        </div>
        
        <div class="mb-3">
            <label class="form-label">Mô tả thêm</label>
            <input type="text" class="form-control" style="background-color: #eee" />
        </div>

        <div class="d-flex justify-content-center align-items-center p-2">
            <button type="submit" class="btn btn-danger px-4" asp-action="Index" asp-controller="Post">Huỷ bỏ</button>
            <div class="px-5"></div>
            <button type="submit" class="btn btn-primary px-4">Đăng bài</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(function () {
            $(".chosen-default").chosen();
        });
    </script>
}