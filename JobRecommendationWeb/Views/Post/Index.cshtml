@model List<Baidang>

@{
    ViewData["title"] = "Bài tuyển dụng";
}

<div class="container mb-5">
    <div class="row">
        <div class="col-6">
            <h3 class="text-dark">Danh sách bài tuyển dụng</h3>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Post">Tạo bài tuyển dụng</a>
        </div>
    </div>
    <div class="search">
		<form asp-action="Index" asp-controller="Post" method="POST" enctype="multipart/form-data" class="row my-2 my-lg-0" autocomplete="off">
			<div class="col-lg-8">
				<input class="form-control mr-sm-2 col-lg-8" type="text" name="Search" id="Search" placeholder="Search">
			</div>
			<div class="col-auto">
                <input class="btn btn-outline-success my-2 my-sm-0" type="submit" value="Search">
			</div>
		</form>
	</div>
</div>


<div class="container d-flex justify-content-center align-items-center">
    <!-- chỗ này binding ra danh các việc làm nè-->
    <ul class="displayCard w-100">
        @foreach (Baidang item in Model)
        {
            <li class="d-inline-block m-4">
                <div class="card position-relative">
                    <a asp-action="Detail" asp-controller="Post" asp-route-id="@item.MaBaiDang" class=" position-absolute top-0 left-0 w-100 h-100"></a>
                    <div class="card-header d-flex justify-content-center align-items-center">
                        <img alt="ảnh công ty" />
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fw-bolder">@item.TenCongViec</h5>
                        <div class="small-text mb-2">
                            <p class="card-text m-0 small">Từ @item.LuongMin đến @item.LuongMax</p>

                            <p class="card-text m-0 small"> Địa điểm: @if (@item.MaCongTyNavigation != null) { @item.MaCongTyNavigation.DiaChi }</p>
                        </div>
                        <p class="card-text">Mô tả</p>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>