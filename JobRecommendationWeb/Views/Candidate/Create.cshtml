@{
    ViewData["Title"] = "Tạo hồ sơ ứng viên";
}

@section Styles {
        <link rel="stylesheet" href="@Url.Content("/css/FormStyle.css")"/>
}

@model List<Kinang>

<div class="container">
    <form asp-action="Create" asp-controller="Candidate" method="post" enctype="multipart/form-data">
		<div class="row-register">
			<!-- <div class="col-register1">
				<img src="images/logo.jpg" alt="ảnh" width="200px">
			</div> -->
			<div class="col-register2">
				<h1>Thông tin ứng viên</h1>
				<hr>
				<br>
				<div class="row-register2">
					<div class="col-register3">
						<label for="candidate_name">Họ Tên</label>
					</div>
					<div class="col-register4">
						<input id="Ten" name="Ten" type="text" required autofocus>
					</div>
				</div>
				<br>
				<div class="row-register2">
					<div class="col-register3">
						<label for="candidate_age">Tuổi</label>
					</div>
					<div class="col-register4">
						<input name="Tuoi" id="Tuoi" type="text" required>
					</div>
				</div>
				<br>
				<div class="row-register2">
					<div class="col-register3">
						<label for="candidate_experience">Thâm Niên</label>
					</div>
					<div class="col-register4">
						<input name="ThamNien" id="ThamNien" type="text" required>
					</div>
				</div>
				<br>
                <div class="row-register2">
					<div class="col-register3">
						<label for="candidate_phone">SĐT</label>
					</div>
					<div class="col-register4">
						<input name="Sdt" id="Sdt" type="text" required>
					</div>
				</div>
                <br>
				<div class="row-register2">
					<div class="col-register3">
						<label for="email">Email</label>
					</div>
					<div class="col-register4">
						<input atype="email" name="email" id="email" required>
					</div>
				</div>
                <br>
				<div class="row-register2">
					<div class="col-register3">
						<label for="kinang">Kĩ năng</label>
					</div>
					<div class="col-register4">
						<select name="Kinang" id="Kinang" class="form-select chosen-default" multiple>
							@foreach (var item in Model)
							{
								<option value="@item.MaKiNang">@item.TenKiNang</option>
							}
						</select>
					</div>
				</div>
                <br>
				<div class="row-register2">
					<div class="col-register3">
						<label for="CV">CV</label>
					</div>
					<div class="col-register4">
						<input type="file" id="CV" accept="image/*" required>
					</div>
				</div>
				<br>
				<div class="row-register2">
					<div class="col-register3">
						<label for="location">Địa chỉ</label>
					</div>
					<div class="col-register4">
						<input name="DiaChi" id="DiaChi" type="text" required>
                        <br>
                        <span>Ví dụ: 332, Cộng Hòa, 14, Tân Bình</span>
					</div>
				</div>
				<br>
				<div class="row-register2">
					<div class="col-register3">
						<label for="country">Quốc tịch</label>
					</div>
					<div class="col-register4">
						<select name="country" id="country" required>
							<option value=""></option>
							<option value="vn">Việt Nam</option>
							<option value="lao">Lào</option>
							<option value="cam">Campuchia</option>
							<option value="kor">Hàn Quốc</option>
							<option value="ger">Đức</option>
							<option value="jap">Nhật Bản</option>
							<option value="tha">Thái Lan</option>
							<option value="USA">Mỹ</option>
							<option value="sin">Singapore</option>
						</select>
					</div>
				</div>
				<br>
                <div class="row-register2">
					<div class="col-register3">
						<!-- <label for="firstname">Firstname</label> -->
					</div>
					<div class="col-register4">
						<button type="submit">Đăng ký</button>
					</div>
				</div>
				
			</div>
		</div>
	</form>
</div>
@section Scripts {
    <script>
        $(function () {
            $(".chosen-default").chosen();
        });
    </script>
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
