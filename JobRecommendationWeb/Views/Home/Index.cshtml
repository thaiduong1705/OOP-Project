@model IEnumerable<JobRecommendationWeb.Models.Kinang>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<table class="table table-bordered table-striped w-100">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tên kĩ năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var p in Model) {
            <tr>
                <td width="20%">@p.MaKiNang</td>
                <td width="80%">@p.TenKiNang</td>
                <td>
                    <a asp-action="KinangEdit" asp-route-id="@p.MaKiNang">Edit</a> |
                    <a asp-action="KinangDetails" asp-route-id="@p.MaKiNang">Details</a> |
                    <a asp-action="KinangDelete" asp-route-id="@p.MaKiNang">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
