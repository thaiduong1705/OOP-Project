@model Hosocongty
@{
    ViewData["Title"] = "Tạo hồ sơ tuyển dụng";

}
@section Styles {
	<link rel="stylesheet" href="@Url.Content("/css/FormStyle.css")"/>
}
<div class="container">
		<form id="formCreate" asp-action="Create" asp-controller="Company" method="POST" enctype="multipart/form-data">
			<div class="row-register">
				<div class="col-register1">
					<img src="/images/logo.jpg" alt="ảnh" style="width: 200px">
				</div>
				<div class="col-register2">
					<h1>Thông tin nhà tuyển dụng</h1>
					<hr>
					<br>
					<div class="row-register2">
						<div class="col-register3">
							<label for="company_name">Tên công ty</label>
						</div>
						<div class="col-register4">
							<input type="text" name="TenCongTy" id="TenCongTy">
						</div>
					</div>
					<br>
					<div class="row-register2">
						<div class="col-register3">
							<label for="staff_name">Website</label>
						</div>
						<div class="col-register4">
							<input type="url" name="Website" id="Website">
						</div>
					</div>
					<br>
					<div class="row-register2">
						<div class="col-register3">
							<label for="staff_phone">Địa chỉ</label>
						</div>
						<div class="col-register4">
							<input type="text" name="DiaChi" id="DiaChi">
						</div>
					</div>
					<br>
					<div class="row-register2">
						<div class="col-register3">
							<label for="country">Quốc tịch</label>
						</div>
						<div class="col-register4">
							<select name="country" id="country">
								<option selected value="Việt Nam">Việt Nam</option>
								<option value="Lào">Lào</option>
								<option value="Campuchia">Campuchia</option>
								<option value="Hàn Quốc">Hàn Quốc</option>
								<option value="Đức">Đức</option>
								<option value="Nhật Bản">Nhật Bản</option>
								<option value="Thái Lan">Thái Lan</option>
								<option value="Mỹ">Mỹ</option>
								<option value="Singapore">Singapore</option>
							</select>

						</div>
					</div>
					<br>
					<div class="row-register2">
						<div class="col-register3">
							<label for="logo">Ảnh công ty</label>
						</div>
						<div class="col-register4">
							<input type="file" name="logo" id="logo" accept="image/*">
						</div>
					</div>
					<br>
					<div class="row-register2">
						<div class="col-register3">
							<label for="staff_phone">Chế độ đãi ngộ:</label>
						</div>
						<div class="col-register4">
							<input type="text" name="CheDoDaiNgo" id="CheDoDaiNgo">
						</div>
					</div>
					<br>
					<div class="row-register2">
						<div class="col-register3">
							<label for="staff_phone">Mô tả thêm</label>
						</div>
						<div class="col-register4">
							<input type="text" name="MoTaThem" id="MoTaThem">
						</div>
					</div>
					<br>
					<div class="row-register2">
						<div class="col-register3">
						</div>
						<div class="col-register4">
							<input type="submit" value="Register" />
						</div>
					</div>

				</div>
			</div>
	</form>
</div>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
	<script src=~/js/CompanyValid.js></script>
}
